<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    i18n_domain="ftw.book">

  <class class=".book.Book">
    <require
        permission="zope2.View"
        interface="..interfaces.IBook"
        />

    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IBook"
        />
  </class>

  <class class=".chapter.Chapter">
    <require
        permission="zope2.View"
        interface="..interfaces.IChapter"
        />

    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IChapter"
        />
  </class>

  <class class=".htmlblock.HTMLBlock">
    <require
        permission="zope2.View"
        interface="..interfaces.IHTMLBlock"
        />

    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IHTMLBlock"
        />
  </class>

  <class class=".remark.Remark">
    <require
        permission="zope2.View"
        interface="..interfaces.IRemark"
        />

    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IRemark"
        />
  </class>
</configure>
